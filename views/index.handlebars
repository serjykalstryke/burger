<div class="jumbotron" style="background-color: rgba(174, 167, 159, 0.3); ">
    <div class="jumbo-container py-5">
        <h1 class="dispaly-5 text-center">BURGER TIME!</h1>
        <div class="row">
            <div class="col-md-8 mx-auto my-2">
                <p class="lead text-center">
                    lorem ipsum
                </p>
            </div>
        </div>
        <form class="create-form">
            <div class="row">
                <div class="col-md-8 mx-auto my-2">
                    <div class="form-group text-center">
                        <input type="text" id="br" name="burger_name" placeholder="Burger Name">
                        <button type="submit">Add Burger!</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 mx-auto my-2 text-center">
                    <div class="form-check form-check-inline">
                        <input type="radio" name="devoured" value="1" checked>
                        <label class="form-check-label" for="inlineRadio1">I Have!</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" name="devoured" value="0">
                        <label class="form-check-label" for="inlineRadio2">Order!</label>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="container text-center mx-auto my-2" style="background-color:rgba(174, 167, 159, 0.3);">
    <div class="row text-center center">
        <div class="col-md-5 list text-center">
            <h4>Burgers I can order!</h4>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-5 list text-center">
            <h4>Burgers I can devour!!</h4>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>